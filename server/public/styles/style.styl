.form-signin
  max-width 330px
  padding 15px
  margin 0 auto
  
  .checkbox
    font-weight normal
  .form-control
    position relative
    height auto
    box-sizing border-box
    padding 10px
    font-size 16px
    &:focus
      z-index 2
      
  input[type="email"]
    margin-bottom -1px
    border-bottom-right-radius 0
    border-bottom-left-radius 0
  input[type="password"]
    margin-bottom 10px
    border-top-left-radius 0
    border-top-right-radius 0

.form-signin .form-signin-heading,
.form-signin .checkbox
  margin-bottom 10px
  


